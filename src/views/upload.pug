extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video File
        input(name="video", type="file", accept="video/*", required, id="video")
        input(name="title", placeholder="Title", required, type="text", maxlegth=80)
        input(name="description", placeholder="Description", required, type="text", minlength=10)
        input(name="hashtags", placeholder="Hashtags, separated by comman.", required, type="text")
        input(type="submit", value="Upload Video") 